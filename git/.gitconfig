[user]
	name = Jintao Zhang
	email = zhangjintao9020@gmail.com
	signingkey = /home/tao/.ssh/id_ed25519.pub
[core]
	editor = vimx
[merge]
	tool = vimdiff

[alias]
    co = checkout
    ci = commit -m
    st = status
    br = branch
    di = diff
    oneline  = log --pretty=oneline --since='2 days ago'
    onelog = log -p -1
[color]
    ui = auto
    interactive = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = magenta
    untracked = bold yellow
[diff]
    tool = vimdiff
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = /home/tao/.config/git/allowed_signers
[init]
	defaultBranch = main
